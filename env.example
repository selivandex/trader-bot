# Trading Mode
MODE=paper  # paper or live

# Exchange Settings - Binance
# NOTE: API keys are stored per-user in database, not in config
BINANCE_DEFAULT_TESTNET=true
# Optional: Override default API endpoints (leave empty to use defaults)
# BINANCE_TESTNET_URL_PUBLIC=https://testnet.binancefuture.com
# BINANCE_TESTNET_URL_PRIVATE=https://testnet.binancefuture.com
# BINANCE_MAINNET_URL_PUBLIC=https://api.binance.com
# BINANCE_MAINNET_URL_PRIVATE=https://api.binance.com

# Exchange Settings - Bybit
# NOTE: API keys are stored per-user in database, not in config
BYBIT_DEFAULT_TESTNET=true
# Optional: Override default API endpoints (leave empty to use defaults)
# BYBIT_TESTNET_URL_PUBLIC=https://api-testnet.bybit.com
# BYBIT_TESTNET_URL_PRIVATE=https://api-testnet.bybit.com
# BYBIT_MAINNET_URL_PUBLIC=https://api.bybit.com
# BYBIT_MAINNET_URL_PRIVATE=https://api.bybit.com

# Trading Parameters
TRADING_SYMBOL=BTC/USDT
TRADING_INITIAL_BALANCE=1000.0
TRADING_MAX_POSITION_PERCENT=30.0
TRADING_MAX_LEVERAGE=3
TRADING_STOP_LOSS_PERCENT=2.0
TRADING_TAKE_PROFIT_PERCENT=5.0
TRADING_PROFIT_WITHDRAWAL_THRESHOLD=1.1

# AI Providers - DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_ENABLED=true
DEEPSEEK_WEIGHT=1.0

# AI Providers - Claude
CLAUDE_API_KEY=your_anthropic_api_key
CLAUDE_ENABLED=true
CLAUDE_WEIGHT=1.0

# AI Providers - OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_ENABLED=false
OPENAI_WEIGHT=0.5

# AI Ensemble Settings
AI_ENSEMBLE_ENABLED=true
AI_ENSEMBLE_MIN_CONSENSUS=2
AI_DECISION_INTERVAL=30m

# News Aggregation (background worker fetches every 10 minutes)
NEWS_ENABLED=true
NEWS_KEYWORDS=bitcoin,btc,crypto,cryptocurrency,ethereum,eth

# News AI Evaluation (uses AI to evaluate news impact/sentiment)
NEWS_EVALUATOR_ENABLED=true
NEWS_EVALUATOR_PROVIDER=deepseek  # deepseek (cheapest), openai, claude, or none (single provider mode)
NEWS_EVALUATOR_ENSEMBLE=false     # true = use all enabled AI providers for consensus (more accurate, higher cost)

# Twitter (X) API - requires Bearer Token (v2 API)
TWITTER_API_KEY=your_twitter_bearer_token
TWITTER_ENABLED=false

# News Sources (no API key needed)
REDDIT_ENABLED=true
COINDESK_ENABLED=true

# On-Chain Monitoring (blockchain activity tracking)
ONCHAIN_ENABLED=true
WHALE_ALERT_API_KEY=your_whale_alert_key
ONCHAIN_MIN_VALUE_USD=1000000

# Risk Management
RISK_MAX_CONSECUTIVE_LOSSES=5
RISK_MAX_DAILY_LOSS_PERCENT=5.0
RISK_MAX_DRAWDOWN_PERCENT=15.0
RISK_CIRCUIT_BREAKER_COOLDOWN=4h

# Telegram Bot (Multi-User)
# Each user gets notifications in their personal chat
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_ALERT_ON_TRADES=true
TELEGRAM_ALERT_ON_ERRORS=true

# Admin Settings
# Set your Telegram ID to enable admin commands (system stats, user management, etc.)
# Get your ID from @userinfobot on Telegram
TELEGRAM_ADMIN_ID=0  # 0 = admin mode disabled

# Database (PostgreSQL) - for operational data, agent memory, vector search
# Use your local PostgreSQL credentials or override with: DB_USER=postgres make db-setup
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trader
DB_USER=trader  # or your PostgreSQL username (often 'postgres' or your OS username)
DB_PASSWORD=    # leave empty if using peer authentication
DB_SSLMODE=disable

# ClickHouse - for time-series data (OHLCV candles, trade history, analytics)
# If disabled, falls back to PostgreSQL (slower for large datasets)
CH_ENABLED=false  # Set to true to use ClickHouse
CH_HOST=localhost
CH_PORT=9000
CH_DATABASE=trader
CH_USER=default
CH_PASSWORD=

# Redis (for distributed locking in K8s multi-pod deployments)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Health Check Server (for K8s liveness/readiness probes)
HEALTH_PORT=8080

# Logging
LOG_LEVEL=info
LOG_FILE=logs/bot.log

# Encryption
ENCRYPTION_KEY=bn+Fa9IFzwfjW6lJaqyT+cghVzdd0eJAavUKLpL5+Sg=
